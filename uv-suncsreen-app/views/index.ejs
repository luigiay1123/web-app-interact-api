<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>UV Forecast</title>
    <link rel="stylesheet" href="/styles.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
  <body>
    <h1>ðŸŒž UV Forecast</h1>

    <form action="/forecast" method="POST">
      <input
        type="text"
        name="location"
        placeholder="Enter city or address"
        required
      />
      <button type="submit">Get Forecast</button>
    </form>

    <% if (error) { %>
    <p><%= error %></p>
    <% } %> <% if (forecastData) { %>
    <!-- <div class="chartcontainer">
      <canvas id="uvChart"></canvas>
    </div> -->

    <h2>Hourly Sunscreen Advice</h2>
    <table>
      <tr>
        <th>Time</th>
        <th>UV Index</th>
        <th>Advice</th>
      </tr>
      <% forecastData.forEach(item => { %>
      <tr>
        <td>
          <%= new Date(item.time).toLocaleTimeString([], { hour: '2-digit',
          minute: '2-digit' }) %>
        </td>
        <td><%= item.uv %></td>
        <td><%= item.advice %></td>
      </tr>
      <% }) %>
    </table>

    <!-- <script type="module">
      import { renderUVChart } from '/chart-uv.js';

      const forecastData = <%- JSON.stringify(forecastData) %>;
      renderUVChart(forecastData);
    </script> -->
    <% } %>
  </body>
</html>
