<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title><%= name %></title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <h1><%= name %></h1>
    <img src="<%= image %>" alt="Cocktail Image" width="200" height="200" />
    <h2>Instructions</h2>
    <p><%= instructions %></p>

    <h2>Ingredients</h2>
    <ul>
      <% ingredients.forEach(ingredient => { %>
      <li>
        <img
          src="<%= ingredient.thumbnail %>"
          alt="<%= ingredient.name %>"
          width="50"
        />
        <%= ingredient.measure %> <%= ingredient.name %>
      </li>
      <% }) %>
    </ul>

    <button onclick="window.location.reload()">Get Another Cocktail</button>
  </body>
</html>
